<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<resc:Image xmlns:resc='http://www.resc.reading.ac.uk'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'>
	<RasterLayer>
		<DataFieldName>$layerName-mean</DataFieldName>
		<PaletteColourScheme>
            <ScaleRange>
    			<ScaleMin>$scaleMin</ScaleMin>
    			<ScaleMax>$scaleMax</ScaleMax>
    			<Logarithmic>$logarithmic</Logarithmic>
            </ScaleRange>
            <ColourMap>
    			<AboveMaxColour>$aboveMaxColor</AboveMaxColour>
    			<BelowMinColour>$belowMinColor</BelowMinColour>
    			<MissingDataColour>$bgColor</MissingDataColour>
    			<Palette>$paletteName</Palette>
    			<NumberOfColourBands>$numColorBands</NumberOfColourBands>
            </ColourMap>
		</PaletteColourScheme>
	</RasterLayer>
	<RasterLayer>
		<DataFieldName>$layerName-stddev</DataFieldName>
		<PaletteColourScheme>
            <ScaleRange>
    			<ScaleMin>0</ScaleMin>
    			<ScaleMax>2</ScaleMax>
    			<Logarithmic>$logarithmic</Logarithmic>
            </ScaleRange>
            <ColourMap>
    			<AboveMaxColour>#000000</AboveMaxColour>
    			<BelowMinColour>#00000000</BelowMinColour>
    			<MissingDataColour>$bgColor</MissingDataColour>
    			<Palette>#00000000,#ff000000</Palette>
    			<NumberOfColourBands>10</NumberOfColourBands>
            </ColourMap>
		</PaletteColourScheme>
	</RasterLayer>
</resc:Image>
